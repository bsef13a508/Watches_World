                    </div>
						<div id="checking">Checking...</div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.cemail,new {name="UserName",id="UserName", placeholder ="Email"})
                        <div> @Html.ValidationMessageFor(model => model.cemail)</div>
                       
